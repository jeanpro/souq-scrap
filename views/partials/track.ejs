<div class="col-sm-6 col-lg-4 col-md-4">
  <div class="thumbnail">
  	<p class="text-right">
	  	<a href="#" data-id="<%= pid %>" class="btn btn-danger btn-sm btn-remove-track" role="button">
	  		<i class="fa fa-trash fa-2x" aria-hidden="true"></i>
	  	</a>
  	</p>
  	<a href="<%= url%>" target="_blank">
    	<img class="track-image" src="<%= img.replace('item_L','item_M').replace('item_XL','item_M').replace('item_XXL','item_M') %>"
    	<% if(status == "linkBroken"){ %>
    		style="-webkit-filter:blur(5px);filter:blur(5px);"
    	<% }else if(status == "ProductOutOfStock"){ %>
    		style="-webkit-filter:grayscale(100%);filter:grayscale(100%);"
    	<% } %>
    	>
    </a>
    <div class="caption">
      <h3 class="track-title"
		<% if(status == "linkBroken" || status == "ProductOutOfStock" ){ %>
    		style="text-decoration: line-through;;"
    	<% }%>
      ><%= title %></h3> 
        <table class="table table-condensed">
			<thead>
				<tr>
					<th>Original</th>
					<th>Actual</th>
					<th>%</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= originalPrice %></td>
					<% if(status == "linkBroken"){ %>
					<td><i>Link Broken</i></td>
					<td>-</td>
					<% }else if(status == "ProductOutOfStock"){%>
					<td><<i>Product Out of Stock</i></td>
					<td>-</td>
					<% }else{ %>
					<td><%= actualPrice %></td>
					<td><%= Math.round(100*(actualPrice- originalPrice)/originalPrice)%></td>
					<% } %>
				</tr> 
			</tbody>
		</table>
      <p><a href="#" data-original="<%= timestamp %>" data-id="<%= pid %>" data-toggle="modal" data-target="#graphModal" class="btn btn-primary btn-block graph-open" role="button">Graph</a></p>
    </div>
  </div>
</div>

